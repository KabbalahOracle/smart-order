# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.MainController.index()
GET     /test                               controllers.MainController.test()
GET     /records                            controllers.MainController.getNumRecords()
GET     /gtin                               controllers.MainController.getGtin(gtin: String)
GET     /testbasket                         controllers.MainController.getTestBasket(gtin: String)
GET     /smart/full                         controllers.MainController.getSmartBasket(pretty: String?="off", limit: Int=0, authkey: String?="0000", glncode: String, basket: String?="", nota: String?="")
GET     /smart/compact                      controllers.MainController.getSmartBasket(pretty: String?="off", limit: Int=2, authkey: String?="0000", glncode: String, basket: String?="", nota: String?="")
GET     /smart/user                         controllers.MainController.getUserArticles(pretty: String?="off", authkey: String?="0000", glncode: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)
